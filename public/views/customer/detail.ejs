    <script>
         
    $("#od").click(function(event) {
      $("#frm").show();
      $("#frm2").hide();
      
      
});


    var order={
                cname :"" ,
                pname :"<%=request.product.name%>" ,
                photo:"<%=request.product.image%>",
                adress:"",
                phone : "",
                card : "",
                status:"Not Delivered",
                price:<%=request.product.price%> 
                };
            $("#cname").change(function()
            {
               
                order.cname= $("#cname").val();
            
            });
             $("#pname").change(function()
            {
                order.pname= $("#pname").val();
            
            });
            
             $("#adress").change(function()
            {
                order.adress= $("#adress").val();
            
            });
                $("#phone").change(function()
            {
                order.phone= $("#phone").val();
            
            });
                 $("#crd").change(function()
            {
                order.card= $("#crd").val();
            
            });
            
             $("#status").change(function()
            {
                order.status= $("#status").val();
            
            });
             $("#price").change(function()
            {
                 order.price=undefined;
                order.price= $("#price").val();
            
            });
            
            
            
            
            $("#submit").click(function(){
                $.ajax({
                    method: "POST",
                    url: "/api/Orders",
                    data: order  
                    
                }).done(function(response){
                    console.log(response);
                     $("#frm").hide();
                     $("#frm3").show();
                      /*window.location.replace("/");*/
                }).fail(function(response){
                    $("#error").text(JSON.parse(response.responseText).message);
                   console.log(response); 
                });
                
            });
    
    
    
    </script>
